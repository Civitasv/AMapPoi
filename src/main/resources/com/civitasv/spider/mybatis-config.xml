<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.sqlite.JDBC"/>
                <property name="url" value="jdbc:sqlite:target/classes/com/civitasv/spider/db/poi.db"/>
                <property name="username" value=""/>
                <property name="password" value=""/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/civitasv/spider/mapper/JobMapper.xml"/>
        <mapper resource="com/civitasv/spider/mapper/PoiMapper.xml"/>
        <mapper resource="com/civitasv/spider/mapper/TaskMapper.xml"/>
    </mappers>
</configuration>